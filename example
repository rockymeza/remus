#!/usr/bin/env ruby
require 'remus'

# timer
puts( 'Remus Test Run')

lang = ARGV[0] || :html

puts('--------------------- '+ Remus.classify(lang) )
start_time = Time.new.to_f
puts( Remus.convert_from_file( 'examples/example.'+ lang, lang ) )
end_time = Time.new.to_f
puts( 'Time: '+ (end_time - start_time).to_s)
